        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-konva": "^18.2.10",
        "tailwind-merge": "^2.3.0",
        "tailwindcss-animate": "^1.0.7",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.12.12",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-react": "^4.2.1",
